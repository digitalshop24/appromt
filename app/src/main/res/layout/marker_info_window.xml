<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/dialog_background"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true">

    <RelativeLayout
        android:id="@+id/content_window"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_edit"/>

        <EditText
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@color/purple"
            android:gravity="center"
            android:maxLines="1"
            android:nextFocusDown="@id/text_text"
            android:nextFocusForward="@id/text_text"
            android:nextFocusRight="@id/text_text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/text_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/text_title"
            android:layout_marginBottom="30dp"
            android:background="@color/white"
            android:gravity="center"
            android:nextFocusRight="@id/text_title"
            android:nextFocusUp="@id/text_title"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_delete"/>
    </RelativeLayout>
</RelativeLayout>